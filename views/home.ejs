<html>
  <head>
    <title>Express Todo App</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <link href="/style.css" rel="stylesheet" />
  </head>
  <body>
    <header>
      <h2 class="title">TODO <span>APP <span></span></h2>
    </header>
    <br />
    <div class="container">
      <form action="/todo/add" method="POST">
        <input class="form-control" type="text" name="task" value="" />
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <% tasks.forEach( todo => { %> <% if(todo.complete) { %>
      <h2 class="complete"><%= todo.task %></h2>
      <% } else { %>
      <h2 class="notCom"><%= todo.task %></h2>
      <form action="/todo/<%= todo._id %>/complete?_method=PUT" method="POST">
        <button class="btn btn-success">Mark complete</button>
      </form>
      <% }%>
      <form action="/todo/<%= todo._id %>/delete?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
      </form>
      <% })%>
    </div>
  </body>
</html>
